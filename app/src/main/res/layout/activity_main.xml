<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/user_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="100dp"
        android:hint="@string/user_input_field"
        android:textColor="@color/white"
        android:textColorHint="@color/user_input_field"
        android:textSize="18sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/user_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_input_field"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/user_button"
        android:text="@string/user_button" />

    <TextView
        android:id="@+id/field_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_button"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

</RelativeLayout>