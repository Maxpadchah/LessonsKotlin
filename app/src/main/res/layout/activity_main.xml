<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/logo_layout_marginHorizontal"
        android:layout_marginTop="@dimen/logo_layout_marginTop"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/logo_text_size" />

    <EditText
        android:id="@+id/user_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginHorizontal="@dimen/user_input_field_marginHorizontal"
        android:layout_marginTop="@dimen/user_input_field_marginTop"
        android:hint="@string/user_input_field"
        android:textColor="@color/white"
        android:textColorHint="@color/user_input_field"
        android:textSize="@dimen/user_input_field_text_size" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/user_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_input_field"
        android:layout_marginHorizontal="@dimen/user_button_marginHorizontal"
        android:layout_marginTop="@dimen/user_button_marginTop"
        android:backgroundTint="@color/user_button"
        android:text="@string/user_button" />

    <TextView
        android:id="@+id/field_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_button"
        android:layout_marginHorizontal="@dimen/field_information_marginHorizontal"
        android:layout_marginTop="@dimen/field_information_marginTop"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/field_information_text_size" />

</RelativeLayout>